<div class="page-header">
  <h1>
    Meal items
    <a href="/meal_items/new" class="btn btn-lg btn-success">New Meal item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item name</th>
        <th>Picture</th>
        <th>Price</th>
        <th>Order</th>
        <th>Actions</th>
      </tr>

      <% @meal_items.each do |meal_item| %>
      <tr>
        <td><%= meal_item.item_name %></td>
        <td><%= meal_item.picture %></td>
        <td><%= meal_item.price %></td>
        <td><%= meal_item.order_id %></td>
        <td>
          <a href="/meal_items/<%= meal_item.id %>" class="btn btn-primary">Show</a>
          <a href="/meal_items/<%= meal_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal_item/<%= meal_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
